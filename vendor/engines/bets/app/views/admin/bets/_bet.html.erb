<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(bet) -%>">
  <span class='title'>
    <%= bet.result %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), bet_path(bet),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_bet_path(bet),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_bet_path(bet),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => bet.result),
        :method => :delete %>
  </span>
</li>
